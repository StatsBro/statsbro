@model TableViewModel

@{
    var request = (StatsRequest)ViewBag.Request;
    var linkBuilder = (StatsRequestLinkBuilder)ViewBag.LinkBuilder;
}

<table class="table datatable table-striped fs-0-75">
    <thead>
        <tr>
            @foreach(DataColumn col in Model.Data.Columns)
            {
                <th scope="col">@col.ColumnName</th>    
            }
        </tr>
    </thead>
    <tbody>
        @foreach(DataRow row in Model.Data.Rows)
        {
            <tr>
                @for(int i = 0 ; i < Model.Data.Columns.Count; i++)
                {
                    if (i == 0)
                    {
                        <td><a href="@linkBuilder.FilterBy(Model.FilterType, row[i].ToString()).GetUrl()">@row[i]</a></td>   
                    }
                    else
                    {
                        <td>@row[i]</td>    
                    }
                }
            </tr>
        }
    </tbody>
</table>